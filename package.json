{
  "name": "build_tools",
  "version": "1.0.0",
  "description": "Basic Build Tools",
  "main": "../main.js",
  "scripts": {
    "test": "Test",
    "build-css": "node-sass --include-path scss src/scss/main.scss build/main.css",
    "watch-sass": "nodemon -e scss -x \"npm run build-css\"",
    "build-js": "browserify src/js/main.js -o build/main.js",
    "watch-js": "nodemon -e js --watch src/js -x \"npm run build-js\"",
    "watch": "npm run watch-js & npm run watch-sass"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/n/a.git"
  },
  "author": "Brian Gervais",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/n/a/issues"
  },
  "homepage": "https://github.com/n/a#readme",
  "devDependencies": {
    "jquery": "^3.1.1",
    "node-sass": "^4.5.0",
    "nodemon": "^1.11.0",
    "randomcolor": "^0.4.4"
  }
}
